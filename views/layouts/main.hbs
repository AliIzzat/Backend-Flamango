          <form id="miniCartCheckoutForm" action="/order/confirm" method="GET" style="margin:0">
            <input type="hidden" name="customerName" value="Any User" />
            <input type="hidden" name="location" value="Any City" />
            <input type="hidden" name="latitude"  id="miniLatitude" />
            <input type="hidden" name="longitude" id="miniLongitude" />
            <button type="submit" id="miniCheckoutBtn" class="btn btn--primary">Checkout</button>
          </form>
      </div>
    </div>
